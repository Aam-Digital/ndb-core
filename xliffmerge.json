{
  "xliffmergeOptions": {
    "srcDir": "src/assets/locale",
    "genDir": "src/assets/locale",
    "i18nFile": "messages.xlf",
    "i18nBaseFile": "messages",
    "i18nFormat": "xlf",
    "encoding": "UTF-8",
    "defaultLanguage": "en-US",
    "languages": [
      "de",
      "fr",
      "it"
    ],
    "removeUnusedIds": true,
    "supportNgxTranslate": false,
    "ngxTranslateExtractionPattern": "@@|ngx-translate",
    "useSourceAsTarget": true,
    "targetPraefix": "",
    "targetSuffix": "",
    "beautifyOutput": true,
    "allowIdChange": true,
    "autotranslate": false,
    "verbose": false,
    "quiet": false
  }
}

