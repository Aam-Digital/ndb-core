  "view:user": {"component": "UserAccount"},
  "view:note": {
    "component": "NotesManager",
    "config": {
      "title": "Events & Reports",
      "columns": [
        {"component": "DisplayDate", "title": "Date", "id": "date"},
        {"component": "DisplayText", "title": "Subject", "id": "subject"},
        {"component": "DisplayText", "title": "Category", "id": "categoryName"},
        {"component": "DisplayText", "title": "Author", "id": "author"},
        {"component": "ChildBlockList", "title": "Children", "id": "children", "noSorting": true}
      ],
      "columnGroup": {
        "default": "Standard",
        "mobile": "Mobile",
        "groups": [
          {
            "name": "Standard",
            "columns": ["date", "subject", "categoryName", "author", "children"]
          },
          {
            "name": "Mobile",
            "columns": ["date", "subject", "children"]
          }
        ]
      },
      "filters": [
        { "id": "date", "type": "prebuilt"},
        {
          "id": "category",
          "label": "Category",
          "type": "configurable-enum",
          "enumId": "interaction-type",
          "display": "dropdown"
        },
        { "id": "status", "type": "prebuilt"}
      ]
    }
  },
  "view:admin": {"component": "Admin", "requiresAdmin": true},
  "view:users": {"component": "UserList", "requiresAdmin": true},
  "view:admin/conflicts": {"component": "ConflictResolution", "requiresAdmin": true },
