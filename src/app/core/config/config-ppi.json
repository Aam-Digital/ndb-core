  "view:school": {
    "component": "SchoolsList",
    "config": {
      "title": "All Teams",
      "columns": [
        {"component": "DisplayText", "title": "Team", "id": "name"},
        {"component": "DisplayConfigurableEnum", "title": "Tier", "id": "tier"},
        {"component": "DisplayConfigurableEnum", "title": "Program", "id": "program"},
        {"component": "DisplayText", "title": "Location", "id": "location"}
      ],
      "columnGroup": {
        "default": "Team Info",
        "mobile": "Team Info",
        "groups": [
          {
            "name": "Team Info",
            "columns": ["name", "tier", "program", "location"]
          }
        ]
      },
      "filters": [
        {
          "id": "tier",
          "label": "Tier",
          "type": "configurable-enum",
          "enumId": "tier"
        },
        {
          "id": "program",
          "label": "Program",
          "type": "configurable-enum",
          "enumId": "tier-program",
          "display": "dropdown"
        }
      ]
    }
  },
  "view:school/:id": {
    "component": "EntityDetails",
    "config": {
      "entity": "Team",
      "panels": [
        {
          "title": "Basic Information",
          "components": [
            {
              "title": "",
              "component": "Form",
              "config": {
                "cols": [
                  [
                    { "id": "name", "input": "text", "placeholder": "Name"},
                    { "id": "location", "input": "text", "placeholder": "Location"}
                  ],
                  [
                    { "id": "tier", "input": "configurable-enum-select", "enumId": "tier", "placeholder": "Tier"},
                    { "id": "program", "input": "configurable-enum-select", "enumId": "tier-program", "placeholder": "Program"}
                  ],
                  [
                    { "id": "remarks", "input": "textarea", "placeholder": "Remarks"}
                  ]
                ]
              }
            }
          ]
        },
        {
          "title": "Participants",
          "components": [{"title": "", "component": "ChildrenOverview"}]}
      ],
      "icon": "university"
    }
  },
  "view:child": {
    "component": "ChildrenList",
    "config": {
      "title": "All Participants",
      "columns": [
        {"component": "ChildBlock", "title": "Name", "id": "name"},
        {"component": "DisplayText", "title": "Age", "id": "age"},
        {"component": "DisplayDate", "title": "DoB", "id": "dateOfBirth"},
        {"component": "DisplayText", "title": "Gender", "id": "gender"},
        {"component": "DisplayText", "title": "Class", "id": "class"},
        {"component": "DisplayText", "title": "Status", "id": "status"},
        {"component": "DisplayDate", "title": "Admission", "id": "admissionDate"},
        {"component": "DisplayCheckmark", "title": "Photo Consent", "id": "photoConsent"},
        {"component": "DisplayText", "title": "Address", "id": "address"},
        {"component": "DisplayText", "title": "Phone", "id": "phone"},
        {"component": "DisplayText", "title": "Email", "id": "email"},
        {"component": "DisplayText", "title": "Parents Phone", "id": "parentsPhone"},
        {"component": "DisplayText", "title": "Parents Email", "id": "parentsEmail"}
      ],
      "columnGroup": {
        "default": "Basic Info",
        "mobile": "Mobile",
        "groups": [
          {
            "name": "Basic Info",
            "columns": ["name", "age", "dateOfBirth", "gender", "class", "status", "photoConsent"]
          },
          {
            "name": "Contact Details",
            "columns": ["name", "phone", "email", "parentsPhone", "parentsEmail", "address"]
          },
          {
            "name": "Mobile",
            "columns": ["name", "age", "class", "status"]
          }
        ]
      },
      "filters": [
        {
          "id": "photoConsent",
          "type": "boolean",
          "default": "",
          "true": "Photo Consent",
          "false": "No Consent",
          "all": "All"
        },
        {
          "id": "status"
        }
      ]
    }
  },
  "view:child/:id": {
    "component": "EntityDetails",
    "config": {
      "icon": "child",
      "entity": "Participant",
      "panels": [
        {
          "title": "Basic Information",
          "components": [
            {"title": "", "component": "Form",
              "config": {
                "cols": [
                  [{ "input": "photo", "id": "photoFile", "placeholder": "Photo Filename" }],
                  [
                    { "input": "text", "id": "name", "placeholder": "Name", "required": true },
                    { "input": "text", "id": "phone", "placeholder": "Phone Number", "required": false },
                    { "input": "text", "id": "email", "placeholder": "Email Address", "required": false },
                    { "input": "text", "id": "class", "placeholder": "Class", "required": false },
                    { "input": "text", "id": "status", "placeholder": "Status"}
                  ],
                  [
                    { "input": "age", "id": "dateOfBirth", "placeholder": "Date of birth" },
                    {
                      "input": "select",
                      "id": "gender",
                      "placeholder": "Gender",
                      "options": ["M", "F"]
                    },
                    { "input": "textarea", "id": "address", "placeholder": "Address"},
                    { "input": "checkbox", "id": "photoConsent", "placeholder": "Photo Consent"}

                  ],
                  [
                    {
                      "input": "datepicker",
                      "id": "admissionDate",
                      "placeholder": "Admission Date"
                    },
                    { "input": "text", "id": "parentsPhone", "placeholder": "Parents Phone Number"},
                    { "input": "text", "id": "parentsEmail", "placeholder": "Parents Email Address"}
                  ]
                ]
              }
            }
          ]
        },
        {
          "title": "Teams",
          "components": [
            {"title": "Participation History", "component": "PreviousSchools"}
          ]
        },
        {
          "title": "Attendance",
          "components": [
            {"title": "", "component": "GroupedChildAttendance"}
          ]
        },
        {
          "title": "Events & Notes",
          "components": [
            {"title": "", "component": "NotesOfChild"}
          ]
        }
      ]
    }
  },

  "view:recurring-activity": {
    "component": "ActivityList",
    "config": {
      "title": "Recurring Activities",
      "columns": [
        {
          "component": "DisplayText",
          "title": "Title",
          "id": "title"
        },
        {
          "component": "DisplayConfigurableEnum",
          "title": "Type",
          "id": "type"
        },
        {
          "component": "DisplayCheckmark",
          "title": "bi-communal (mixed)",
          "id": "isBiCommunal"
        },
        {
          "component": "DisplayText",
          "title": "Assigned to",
          "id": "assignedTo"
        }
      ],
      "columnGroup": {
        "default": "All",
        "mobile": "All",
        "groups": [
          {
            "name": "All",
            "columns": [
              "title",
              "type",
              "isBiCommunal",
              "assignedTo"
            ]
          }
        ]
      },
      "filters": [
        {
          "id": "assignedTo"
        }
      ]
    }
  },
  "view:recurring-activity/:id": {
    "component": "EntityDetails",
    "config": {
      "entity": "RecurringActivity",
      "panels": [
        {
          "title": "Activity",
          "components": [
            {
              "component": "Form",
              "config": {
                "cols": [
                  [
                    {
                      "id": "title",
                      "input": "text",
                      "placeholder": "Title"
                    }
                  ],
                  [
                    {
                      "id": "type",
                      "input": "configurable-enum-select",
                      "enumId": "interaction-type",
                      "placeholder": "Type"
                    },
                    {
                      "id": "isBiCommunal",
                      "input": "checkbox",
                      "placeholder": "bi-communal (mixed)"
                    }
                  ],
                  [
                    {
                      "id": "assignedTo",
                      "input": "text",
                      "placeholder": "Assigned to"
                    }
                  ]
                ]
              }
            }
          ]
        },
        {
          "title": "Participants",
          "components": [
            {
              "component": "ActivityParticipantsSection"
            }
          ]
        },
        {
          "title": "Events & Attendance",
          "components": [
            {
              "component": "ActivityAttendanceSection"
            }
          ]
        }
      ],
      "icon": "calendar"
    }
  },

