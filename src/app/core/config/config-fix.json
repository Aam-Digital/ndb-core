{
    "navigationMenu": {
        "items": [
            {"name": "Dashboard", "icon": "home", "link": "/dashboard"},
            {"name": "Children", "icon": "child", "link": "/child"},
            {"name": "Teams", "icon": "university", "link": "/school"},
            {"name": "Events", "icon": "file-text", "link": "/note"},
            {"name": "Attendance Register", "icon": "table", "link": "/attendance"},
            {"name": "Admin", "icon": "wrench", "link": "/admin"},
            {"name": "Users", "icon": "user", "link": "/users"},
            {"name": "Database Conflicts", "icon": "wrench", "link": "/admin/conflicts"},
            {"name": "Help", "icon": "question-circle", "link": "/help"}
        ]
    },
    "notes": {
        "InteractionTypes": {
            "NONE": {"name": ""},
            "PRACTICE": {"name": "Practice", "isMeeting": true},
            "MATCH": {"name": "Match", "isMeeting": true, "color": "#E1BEE7"}
        }
    },
    "view:": {
        "component": "Dashboard",
        "config": {
            "widgets": [
                {
                    "component": "ChildrenCountDashboard"
                },
                {
                    "component": "AttendanceWeekDashboard",
                    "config": {
                        "daysOffset": 0,
                        "periodLabel": "last week"
                    }
                },
                {
                    "component": "AttendanceWeekDashboard",
                    "config": {
                        "daysOffset": 7,
                        "periodLabel": "this week"
                    }
                },
                {
                    "component": "ProgressDashboard",
                    "config": {
                        "dashboardConfigId": "1"
                    }
                },
                {
                    "component": "AttendanceAverageDashboard"
                },
                {
                    "component": "AttendanceWarningsDashboard"
                }
            ]
        }
    },
    "view:user": {"component": "UserAccount"},
    "view:note": {
        "component": "NotesManager",
        "config": {
            "title": "Notes & Reports",
            "columns": [
                {"component": "DisplayDate", "title": "Date", "id": "date"},
                {"component": "DisplayText", "title": "Subject", "id": "subject"},
                {"component": "DisplayText", "title": "Category", "id": "categoryName"},
                {"component": "DisplayText", "title": "Author", "id": "author"},
                {"component": "ChildBlockList", "title": "Children", "id": "children", "noSorting": true}
            ],
            "columnGroup": {
                "default": "Standard",
                "mobile": "Mobile",
                "groups": [
                    {
                        "name": "Standard",
                        "columns": ["date", "subject", "categoryName", "author", "children"]
                    },
                    {
                        "name": "Mobile",
                        "columns": ["date", "subject", "children"]
                    }
                ]
            },
            "filters": [
                { "id": "status", "type": "prebuilt"},
                { "id": "date", "type": "prebuilt"},
                { "id": "categoryName", "label": "Category", "display": "dropdown"}
            ]
        }
    },
    "view:admin": {"component": "Admin", "requiresAdmin": true},
    "view:users": {"component": "UserList", "requiresAdmin": true},
    "view:admin/conflicts": {"component": "ConflictResolution", "requiresAdmin": true },
    "view:help": {"component": "Help"},
    "view:attendance": {"component": "AttendanceManager"},
    "view:attendance/analysis": {"component": "AttendanceAnalysis"},
    "view:attendance/add/month": {"component": "AddMonthAttendance"},
    "view:attendance/add/day": {"component": "AddDayAttendance"},

    "view:school": {
        "component": "SchoolsList",
        "config": {
            "title": "Schools List",
            "columns": [
                {"component": "DisplayText", "title": "Name", "id": "name"},
                {"component": "DisplayText", "title": "Medium", "id": "medium"},
                {"component": "DisplayCheckmark", "title": "Private School", "id": "privateSchool"},
                {"component": "DisplayText", "title": "Board", "id": "academicBoard"},
                {"component": "DisplayText", "title": "Up to class", "id": "upToClass"}
            ],
            "columnGroup": {
                "default": "School Info",
                "mobile": "School Info",
                "groups": [
                    {
                        "name": "School Info",
                        "columns": ["name", "medium", "privateSchool", "academicBoard", "upToClass"]
                    }
                ]
            },
            "filters": [
                { "id": "medium" },
                {
                    "id": "privateSchool",
                    "type": "boolean",
                    "default": "",
                    "true": "Private School",
                    "false": "Government School",
                    "all": "All"
                }
            ]
        }
    },
    "view:school/:id": {
        "component": "EntityDetails",
        "config": {
            "entity": "School",
            "panels": [
                {
                    "title": "Basic Information",
                    "components": [
                        {
                            "title": "",
                            "component": "Form",
                            "config": {
                                "cols": [
                                    [{"input": "text", "id": "name", "placeholder": "Name"}],
                                    [{"input": "text", "id": "medium", "placeholder": "Medium"}],
                                    [{"input": "checkbox", "id": "privateSchool", "placeholder": "Private School"}],
                                    [{"input": "text", "id": "academicBoard", "placeholder": "Board"}],
                                    [{"input": "text", "id": "phone", "placeholder": "Contact Number"}],
                                    [{"input": "text", "id": "address", "placeholder": "Address"}],
                                    [{"input": "text", "id": "website", "placeholder": "Website"}],
                                    [{"input": "text", "id": "timing", "placeholder": "School Timing"}],
                                    [{"input": "text", "id": "workingDays", "placeholder": "Working Days"}],
                                    [{"input": "text", "id": "upToClass", "placeholder": "Teaching up to class"}],
                                    [{"input": "textarea", "id": "remarks", "placeholder": "Remarks"}]
                                ]
                            }
                        }
                    ]
                },
                {
                    "title": "Students",
                    "components": [{"title": "", "component": "ChildrenOverview"}]}
            ],
            "icon": "university"
        }
    },
    "view:child": {
        "component": "ChildrenList",
        "config": {
            "title": "All Players",
            "columns": [
                {"component": "ChildBlock", "title": "Name", "id": "name"},
                {"component": "DisplayText", "title": "Age", "id": "age"},
                {"component": "DisplayDate", "title": "DoB", "id": "dateOfBirth"},
                {"component": "DisplayText", "title": "Gender", "id": "gender"},
                {"component": "DisplayText", "title": "Class", "id": "class"},
                {"component": "DisplayText", "title": "Status", "id": "status"},
                {"component": "DisplayDate", "title": "Admission", "id": "admissionDate"},
                {"component": "DisplayCheckmark", "title": "Photo Consent", "id": "photoConsent"},
                {"component": "DisplayText", "title": "Address", "id": "address"},
                {"component": "DisplayText", "title": "Phone", "id": "phone"},
                {"component": "DisplayText", "title": "Email", "id": "email"},
                {"component": "DisplayText", "title": "Parents Phone", "id": "parentsPhone"},
                {"component": "DisplayText", "title": "Parents Email", "id": "parentsEmail"}
            ],
            "columnGroup":  {
                "default": "Basic Info",
                "mobile": "Mobile",
                "groups": [
                    {
                        "name": "Basic Info",
                        "columns": ["name", "age", "dateOfBirth", "gender", "class", "status", "photoConsent"]
                    },
                    {
                        "name": "Contact Details",
                        "columns": ["name", "phone", "email", "parentsPhone", "parentsEmail", "address"]
                    },
                    {
                        "name": "Mobile",
                        "columns": ["name", "age", "class", "status"]
                    }
                ]
            },
            "filters": [
                {
                    "id": "photoConsent",
                    "type": "boolean",
                    "default": "",
                    "true": "Given",
                    "false": "Not Given",
                    "all": "All"
                },
                {
                    "id": "status"
                }
            ]
        }
    },
    "view:child/:id": {
        "component": "EntityDetails",
        "config": {
            "icon": "child",
            "entity": "Child",
            "panels": [
                {
                    "title": "Basic Information",
                    "components": [
                        {"title": "", "component": "Form",
                            "config": {
                                "cols": [
                                    [{ "input": "photo", "id": "photoFile", "placeholder": "Photo Filename" }],
                                    [
                                        { "input": "text", "id": "name", "placeholder": "Name", "required": true },
                                        { "input": "text", "id": "phone", "placeholder": "Phone Number", "required": true },
                                        { "input": "text", "id": "email", "placeholder": "Email Address", "required": true },
                                        { "input": "text", "id": "class", "placeholder": "Class", "required": true },
                                        { "input": "text", "id": "status", "placeholder": "Status"}
                                    ],
                                    [
                                        { "input": "age", "id": "dateOfBirth", "placeholder": "Date of birth" },
                                        {
                                            "input": "select",
                                            "id": "gender",
                                            "placeholder": "Gender",
                                            "options": ["M", "F"]
                                        },
                                        { "input": "textarea", "id": "address", "placeholder": "Address"},
                                        { "input": "checkbox", "id": "photoConsent", "placeholder": "Photo Consent"}

                                    ],
                                    [
                                        {
                                            "input": "datepicker",
                                            "id": "admissionDate",
                                            "placeholder": "Admission Date"
                                        },
                                        { "input": "text", "id": "parentsPhone", "placeholder": "Parents Phone Number"},
                                        { "input": "text", "id": "parentsEmail", "placeholder": "Parents Email Address"}
                                    ]
                                ]
                            }
                        }
                    ]
                },
                {
                    "title": "Teams",
                    "components": [
                        {"title":  "Player History", "component": "PreviousSchools"}
                    ]
                },
                {
                    "title": "Attendance",
                    "components": [
                        {"title": "", "component": "GroupedChildAttendance"}
                    ]
                },
                {
                    "title": "Events & Notes",
                    "components": [
                        {"title": "", "component": "NotesOfChild"}
                    ]
                }
            ]
        }
    },
    "entity:Child": {
        "attributes": [
            {"name": "gender", "schema": { "dataType": "string" } },
            {"name": "address", "schema": { "dataType": "string" } },
            {"name": "phone", "schema": { "dataType": "string" } },
            {"name": "contactNumber", "schema": { "dataType": "string" }},
            {"name": "parentsPhone", "schema": { "dataType": "string" }},
            {"name": "parentsEmail", "schema": { "dataType": "string" }},
            {"name": "email", "schema": { "dataType": "string" }},
            {"name": "class", "schema": { "dataType": "string" }},
            {"name": "photoConsent", "schema": { "dataType": "boolean" }}
        ]
    }
}
