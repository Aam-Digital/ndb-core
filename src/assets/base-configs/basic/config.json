    "view:note": {
      "component": "NotesManager",
      "config": {
        "entity": "Note",
        "title": "Notes & Reports",
        "includeEventNotes": false,
        "showEventNotesToggle": true,
        "columnGroups": {
          "default": "Standard",
          "mobile": "Mobile",
          "groups": [
            {
              "name": "Standard",
              "columns": [
                "date",
                "subject",
                "category",
                "authors",
