              {
                "query": ".participant:toEntities(Child)",
                "subQueries": [
                  {
                    "label": "participant_id",
                    "query": "_id"
                  },
                  {
                    "label": "participant",
                    "query": "name"
                  },
                  {
                    "label": "gender",
                    "query": "gender"
                  },
                  {
                    "label": "religion",
                    "query": "religion"
                  }
