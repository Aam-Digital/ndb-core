                "endOffsets": [
                  {
                    "amount": 0,
                    "unit": "weeks"
                  }
                ],
                "label": "This week"
              },
              {
                "startOffsets": [
                  {
                    "amount": -1,
                    "unit": "weeks"
                  }
                ],
                "label": "Since last week"
              },
              {
                "startOffsets": [
                  {
                    "amount": 0,
                    "unit": "months"
                  }
                ],
                "endOffsets": [
                  {
                    "amount": 0,
                    "unit": "months"
                  }
                ],
                "label": "This month"
              },
              {
                "startOffsets": [
                  {
                    "amount": -1,
                    "unit": "months"
                  }
                ],
                "endOffsets": [
                  {
                    "amount": -1,
                    "unit": "months"
                  }
                ],
                "label": "Last month"
              }
            ]
          },
          {
            "id": "category"
          },
          {
            "id": "authors"
          }
        ],
        "exportConfig": [
          {
            "label": "event_id",
            "query": "_id"
          },
          {
            "label": "date",
            "query": "date"
          },
          {
            "label": "event title",
            "query": "subject"
          },
          {
            "label": "event type",
            "query": "category"
          },
          {
            "label": "event description",
            "query": "text"
          },
          {
            "query": ":getAttendanceArray(true)",
