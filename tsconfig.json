{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "downlevelIteration": true,
    "types": [ "node", "jasmine" ],
    "typeRoots": [ "../node_modules/@types" ],
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "resolveJsonModule": true
  }
}
